<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

    <addon id="repository.boxxee" name="Boxxee.tv" version="1.0.0" provider-name="Boxxee.tv">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Boxxee.tv Repository">
            <info compressed="false">https://raw.githubusercontent.com/boxxee/repo/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/boxxee/repo/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/boxxee/repo/master/zips/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>The Official Boxxee.tv repository</summary>
			<description>This repository contains all Repositorys for KODI.</description>
			<disclaimer>The owners and submitters to this repository do not host or distribute any of the content displayed by these addons nor do they have any affiliation with the content providers.</disclaimer>
            <platform>all</platform>
    </extension>
</addon>

<addon id="service.autosubs"
    name="AutoSubs" version="1.0.0" provider-name="amet,schumi2004">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.service" library="default.py" start="login"></extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Auto Search for Subtitles on Play</summary>
    <description lang="en">Auto Search for Subtitles on Playback start if no subs are found.[CR][CR]Icon credits goes to zNET Computer Solutions http://www.znetcs.pl</description>
    <platform>all</platform>
    <language>en</language>
    <license>GPL</license>
    <website></website>
    <source>https://github.com/amet/service.autosubs</source>
    <forum>http://forum.xbmc.org/showthread.php?tid=198973</forum>
    <email>schumi2004@gmail.com</email>
  </extension>
</addon>

</addons>
